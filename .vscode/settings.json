{
  "MarkdownPaste.path": "${fileDirname}/images",
  "MarkdownPaste.nameBase": "${datetime|yyyyMMDD_HHmmss}",
  "MarkdownPaste.namePrefix": "",
  "MarkdownPaste.nameSuffix": "",
  "MarkdownPaste.silence": false,
  "MarkdownPaste.enableImgTag": false,
  "MarkdownPaste.encodePath": "encodeSpaceOnly",
  "MarkdownPaste.imageRules": [
    {
      "match": ".*",
      "targetPath": "${fileDirname}/images/${datetime|yyyyMMDD_HHmmss}.png",
      "linkPattern": "![img](${imageFilePath})"
    }
  ],
  "MarkdownPaste.rules": [
    {
      "regex": "!\\[\\]\\((images/[^\\s\\)]+)\\)",
      "options": "g",
      "replace": "![img]($1)"
    },
    {
      "regex": "^(?:https?://)?(?:www\\.)?youtube\\.com/(?:watch\\?.*?v=([^&\\s]+)|embed/([^&\\s]+)).*$",
      "options": "g",
      "replace": "[![](https://img.youtube.com/vi/$1/0.jpg)](https://www.youtube.com/watch?v=$1)"
    },
    {
      "regex": "^(https?://.*)",
      "options": "ig",
      "replace": "[]($1)"
    }
  ],
  "MarkdownPaste.applyAllRules": true,
  "MarkdownPaste.enableHtmlConverter": true,
  "MarkdownPaste.enableRulesForHtml": true,
  "MarkdownPaste.turndownOptions": {
    "headingStyle": "setext",
    "codeBlockStyle": "fenced",
    "emDelimiter": "*",
    "strongDelimiter": "**",
    "bulletListMarker": "-",
    "hr": "-",
    "keepHTML": false,
    "escapeHtml": false
  },
  "MarkdownPaste.enableAI": false
}